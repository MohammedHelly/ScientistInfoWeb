@page
@model ScientistInfoWeb.Pages.ScientistModel
@{
    ViewData["Title"] = "Scientist Information";
}

<h1>Scientist Information</h1>

<form method="get">
    <div>
        <label for="ScientistName">Enter Scientist Name:</label>
        <input type="text" id="ScientistName" name="ScientistName" value="@Model.ScientistName" />
        <button type="submit">Search</button>
    </div>
</form>

@if (Model.ScientistInfoList != null && Model.ScientistInfoList.Count > 0)
{
    <h2>Results for "@Model.ScientistName"</h2>
    <p>Total records found: @Model.TotalRecords</p>

    @foreach (var info in Model.ScientistInfoList)
    {
        <div class="result">
            <h3><a href="@info.Link" target="_blank">@info.Title</a></h3>
            <p><strong>Author Info:</strong> @info.AuthorInfo</p>
            <p><strong>Snippet:</strong> @info.Snippet</p>
            <hr />
        </div>
    }

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Scientist" asp-route-ScientistName="@Model.ScientistName" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
            <li class="page-item disabled">
                <span class="page-link">Page @Model.CurrentPage of @Model.TotalPages</span>
            </li>
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Scientist" asp-route-ScientistName="@Model.ScientistName" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
else if (!string.IsNullOrEmpty(Model.ScientistName))
{
    <p>Scientist not found or information unavailable.</p>
}
